<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.scoula.auth.mapper.SessionMapper">

    <resultMap id="sessionMap" type="org.scoula.auth.domain.UserSession">
        <id property="sessionId" column="session_id"/>
        <result property="memberId" column="member_id"/>
        <result property="refreshToken" column="refresh_token"/>
        <result property="createdAt" column="created_at"/>
        <result property="logoutAt" column="logout_at"/>
    </resultMap>

    <insert id="insertSession">
        INSERT INTO user_session(member_id, refresh_token)
        VALUES (#{memberId}, #{refreshToken})
    </insert>

    <update id="updateLogoutTime">
        UPDATE user_session
        SET logout_at = #{logoutAt}
        WHERE session_id = #{sessionId}
    </update>

    <select id="findActiveSessionsByUserId" resultMap="sessionMap">
        SELECT * FROM user_session
        WHERE member_id = #{memberId} AND logout_at IS NULL
    </select>

</mapper>

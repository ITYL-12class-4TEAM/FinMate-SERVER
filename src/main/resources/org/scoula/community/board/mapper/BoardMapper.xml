<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace는 Mapper 인터페이스의 전체 경로와 일치해야 함 -->
<mapper namespace="org.scoula.community.board.mapper.BoardMapper">
    <resultMap id="boardResultMap" type="org.scoula.community.board.domain.BoardVO">
        <result property="type" column="board_type" typeHandler="org.scoula.community.board.mapper.BoardTypeHandler"/>
        <!-- 다른 컬럼 매핑 -->
        <result property="no" column="no"/>
        <result property="title" column="title"/>
        <result property="writer" column="writer"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    <insert id="create">
        INSERT INTO board(title, writer, board_type, created_at)
        VALUES (#{title}, #{writer}, #{type, typeHandler=org.scoula.community.board.mapper.BoardTypeHandler}, now())
    </insert>

    <select id="get" resultMap="boardResultMap">
        SELECT
            no, title, writer, board_type AS type, created_at, updated_at
        FROM board
        WHERE no = #{no}
    </select>

    <select id="getList" resultMap="boardResultMap">
        <![CDATA[
        select * from board
        order by no desc
        ]]>
    </select>
</mapper>